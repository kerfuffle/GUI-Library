package net.kerfuffle.textTest;

import net.kerfuffle.Utilities.GUI.Text.Font;

public class WordSet {

	private StringBuilder sentence;
	private Font font;
	private String lastLine = null;
	
	public WordSet(Font font)
	{
		sentence = new StringBuilder();
		this.font = font;
	}
	
	public void addLetter(char c)
	{
		
		if (sentence.toString().contains("\n"))
		{
			String sp[] = sentence.toString().split("\n");
			if (font.getWidth(sp[sp.length-1]) > 1300)
			{
				sentence.append("\n");
			}
		}
		else
		{
			if (font.getWidth(sentence.toString()) > 1300)
			{
				sentence.append("\n");
			}
		}
		
		
		sentence.append(c);
	}
	public void removeLastLetter()
	{
		if (sentence.length() > 0)
		{
			sentence.deleteCharAt(sentence.length()-1);
		}
	}
	public void addSpace()
	{
		sentence.append(" ");
	}

	public void draw()
	{
		font.drawText(sentence.toString(), -1300/2, 0);
	}
}
