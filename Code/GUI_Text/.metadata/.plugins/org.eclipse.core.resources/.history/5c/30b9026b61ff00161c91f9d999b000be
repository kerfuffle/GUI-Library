public class HelloWorld extends DavisGUI{

	public HelloWorld()
	{
		super("Hey", 1000, 700);
	}
	
	public static void main(String args[])
	{
		new HelloWorld().run();
	}

	public void childLoop() 
	{
		glColor3f(0, 1, 0);
		glBegin(GL_QUADS);
		glVertex2f(.20f, .20f);
		glVertex2f(.20f+.20f, .20f);
		glVertex2f(.20f+.20f, .20f+.20f);
		glVertex2f(.20f, .20f+.20f);
		glEnd();
		
		/*glColor3f(1, 1, 0);
		glBegin(GL_QUADS);
		glVertex2f(20f, 20f);
		glVertex2f(20f+20f, 20f);
		glVertex2f(20f+20f, 20f+20f);
		glVertex2f(20f, 20f+20f);
		glEnd();*/
		
	}
}